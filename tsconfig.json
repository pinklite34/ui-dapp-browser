{
  "compilerOptions": {
    "declaration": true,
    "module": "es2015",
    "target": "es5",
    "baseUrl": "./src",
    "stripInternal": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "outDir": "../build",
    "rootDir": "./src",
    "lib": [
      "es2015",
      "dom"
    ],
    "skipLibCheck": true,
    "types": []
  },
  "files": [
    "./main.ts"
  ],
  "include": [
    "app/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "**/*.spec.ts"
  ]
}
